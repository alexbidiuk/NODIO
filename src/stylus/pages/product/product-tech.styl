@import "../variables.styl"

/* Product styles */
#product-tech
  .page-header
    height 0
    padding 0
  .page-content
    padding 143px 0 0
    margin 0
    font-size 0
    transition padding .3s linear 0s
  .illustrations
    margin -27px 0 0 -31px
    width 421px
    display inline-block
    vertical-align top
    overflow visible
    &:before
      padding-top 366px
    .illustration
      size 421px 662px
      &.device
        retina-image('~images/pages/product-tech.png', 100% auto, "@2x")
      &.border
        retina-image('~images/pages/product-tech-border.png', 100% auto, "@2x")
  .right-side
    width 391px
    display inline-block
    vertical-align top
    margin 33px 0 0 60px
  .title
    font-size 38px
    line-height 54px
    margin -90px 0 23px 0
    .bold
      font-size 72px
      line-height 66px
    &.tablet-mob 
      display none   
  .text
    width 100%
  .links
    margin-top 81px
    white-space nowrap
    .link-wrap
      display inline-block
      min-width 100px
      text-align right
      &.left
        text-align left
    .download
      size 9px
      display inline-block
      margin 0 5px 0 1px
      fill $turquoise

  .delimiter
    margin 0 49px
  &.show
    .illustrations .illustration.border
      animation-delay 2.3s
  .page-footer
    padding-bottom 0
    margin -10px 0 0
$start = 720px
$step = 60px
$before = 0px
for $i in 0..30
  $height = $start + $i * $step
  if (!($i%2 == 0)) {
    $before += $step
  }  
  +media-query(only screen, min-height $height)
    #product-tech
      .page-footer
        margin: ((-10px) + $before) 0 0 0;
+media-query(only screen, max-width 1080px)
  #product-tech   
    .right-side
      width 351px
      margin 33px 0 0 31px         
// +media-query(only screen, max-width 1030px)
//   #product-tech   
//     .right-side
//       width 351px
//       margin 33px 0 0 20px 
+media-query(only screen, max-width $mobileWidth)
  #product-tech
    .page-header
      margin 30px 0 0 
    .illustrations
      size 100%
      // width 28%   
      // width 34vmin
      // width 43vmin
      margin auto
      display block
      .border
        transform translate(-50%,-50%) rotate(90deg)
    .right-side
      width 100%
      display block
      margin 50px 0 auto
    .title
      font-size 28px
      margin -57px 0 23px 0
      left 0
      .bold
        font-size 54px
    .text
      text-align center
    .links
      margin-top 31px
      text-align center
+media-query(only screen, max-width 780px)  
  #product-tech
    .page-header
      margin 0 
    .title
      display none
      line-height 15px
      &.tablet-mob
        display block  
        width 430px 
        margin -43px 0 0 0
    .delimiter
      margin 0 30px
+media-query(only screen, max-width 500px)
  #product-tech
    .page-header
      margin 30px 0 0 
    .title
      display block
      line-height 36px
      &.tablet-mob
        display none 
      .bold 
        line-height 48px
    .right-side
      margin 38px 0 auto 
    .illustrations
      &:before
        padding-top 270px
    .links
      margin-top 36px
    .next-link
      absolute false 0 0
    
for $i in 0..30
  $height = $expand_height + $i * $expand_height_step
  $content = floor($i / 2) * $expand_height_step
  +media-query(only screen, min-height $height)
    #product-tech
      .page-content
          padding-top (143px + $content)