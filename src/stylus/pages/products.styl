@import "../variables.styl"

/* Products common styles */
.product
  .number
  .illustrations
  .illustration
  .lines
  .title
  .text
  .texts
  .links
  .next-link
    animation-name fade-out
    animation-duration 0.5s
    animation-timing-function linear
    animation-delay 0s
    animation-fill-mode forwards
    opacity 0
  &.show
    opacity 1
    .number
      animation-name fade-in
      animation-duration 0.5s
    .illustrations
      animation-name fade-in
    .illustration
      &.device
        animation-name slide-down-centered
        animation-duration 1s
      &.phone
        animation-name fade-in
        animation-duration 1s
        animation-delay 1s
      &.border
        animation-name blink
        animation-duration 0.5s
        animation-delay 0.9s
    .lines
      animation-name blink
      animation-duration 0.5s
      animation-delay 0.9s
    .title
      animation-name fade-in
      animation-duration 1.5s
      animation-delay 1.5s
    .texts
    .text
      animation-name fade-in
      animation-duration 1.5s
      animation-delay 2s
    .links
      animation-name fade-in
      animation-duration 1s
      animation-delay 2s
    .next-link
      animation-name fade-in, bounce
      animation-duration 0.5s, 3s
      animation-delay 1s, 1s
      animation-iteration-count: 1, infinite
              
  .page-header
    relative false
    height 150px
    margin 60px 0 0
  .number
    absolute -3px false false -4px
    z-index -1
    font-size 200px
    line-height 150px
    font-weight 700
    color rgba(23, 229, 178, 0.1)
    letter-spacing 15px
  .page-content
    relative false
  .illustrations
    relative false
    size 100% auto
    font-size 0
    margin auto
    transform-origin 50% 50%
    &:before
      content ''
      display block
      padding-top 379px
      transition: padding .5s linear 0s;
  .illustrations-container
    absolute -145px -30px -63px -30px
  .illustration
    absolute 50% false false 50%
    transform translate(-50%, -50%)
    transform-origin 50% 50%
    margin auto
    size 901px
    max-width 100%
    max-height 200%
    
    background-position 50% 50%
    background-size 100% auto
    background-repeat no-repeat
    &.border
      z-index 1
    &.phone
      z-index 2
    
  .texts
    min-height 98px
  .title
  .text
    min-height 90px
    display inline-block
    vertical-align baseline
    color $white
  .title
    width 390px
    text-align left
    font-size 38px
    font-weight 300
    .bold
      font-size 66px
      font-weight 700
      line-height 52px
      
  .dot
    display inline-block
    size 9px
    margin 0 0 2px 6px
    background-color $common-dot-background-color
    transform rotate(45deg)

  .page-footer
    size 100% 167px
    max-width 841px
    margin: 0 auto
    transition margin .3s linear 0s
  .text
    width 450px
    text-align left
    font-size 14px
    font-weight 300
    line-height 30px
    letter-spacing 0.5px
    
  .next-link
    absolute false 0 58px
    margin auto
    z-index 10
    &:before
      content: '';
      display: block;
      width: 100%;
      height: 0;
      -webkit-transition: height .2s linear;
      transition: height .2s linear;
      

$start = 720px
$step = 60px
$before = 0px
for $i in 0..30
  $height = $start + $i * $step
  if (!($i%2 == 0)) {
    $before += $step
  }  
  +media-query(only screen, min-height $height)
    .product.page .page-footer
        margin (-61px + $before) 0 0 0

+media-query(only screen, max-width $mobileWidth)
  .product 
    .page-header
      relative 0 0 false
      height 90px
      margin 0 0 60px
      .number
        absolute -25px false false -36px
    .title
      absolute 0 false false 30px
      font-size 28px
      .bold
        font-size 54px
    .texts
      min-height auto
      .text
        width 100%
        padding 0
        text-align center
    .page-footer
      position static
    .next-link
      absolute false 0 0
      
+media-query(only screen, max-width 780px)
  .product
    .page-header
      .number
        absolute -18px false false -36px
        font-size 150px
    .title
      absolute 15px false false false

+media-query(only screen, max-width 500px)
  .product 
    .illustrations-container
      absolute -200px -40px -81px -40px
    .illustrations
      &:before
        padding-top 300px
+media-query(only screen, min-width 400px, max-width 500px)
  .product
    .next-link
      fixed false 0 42px
      
