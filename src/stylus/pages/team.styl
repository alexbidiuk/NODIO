@import "../variables.styl"

/* Team styles */
#team
  .page-header
    padding 84px 0 53px
  .header
  .text-right
    display inline-block
    vertical-align middle
  .page-content
    &:before
    &:after
      transition height .3s linear 0s
    // padding-bottom 37px
  .page-footer
    padding-bottom 0
    margin 36px 0 
  .header
    // font-size 60px
    // font-weight 700
    // color $white
    margin 0 63px 8px 0
    // letter-spacing 4px
    
  .text-right
    width 458px
    font-size 12px
    font-weight 300
    line-height 24px
    letter-spacing 0.75px
    color $white-50
  
  .persons
    font-size 0
    letter-spacing 0px 
    display table
    margin-top -60px
  
  .person
    relative false
    display inline-block
    text-decoration none
    vertical-align top
    size 179px 59px
    margin 61px 61px 0 0
    border-left 1px solid $white-20
    box-sizing border-box
    transition border-color $transition-time linear
    cursor pointer
    zoom 1
    
    &:nth-of-type(4n)
      width 120px
      margin-right 0
    &:hover
      border-color $white
      
    &.empty
      border 0 none
      cursor default
    &.fill
      display none
      height 0
      margin 0
      border-left 1px solid transparent
    .data
      padding 8px 0 8px 8px
      color $white
      .name
        font-size 21px
        font-weight 700
        margin-bottom 6px
        letter-spacing 1px
      .position
        font-size 14px
        font-weight 300
        letter-spacing 0.75px
        
    .point
      background-color $white
      transition background-color $transition-time linear
      
+media-query(only screen, max-width $mobileWidth)
  #team
    .page-header
      padding 0
    .title
    .text-right
      width 100%
      margin 0
      box-sizing border-box
    .persons
      text-align justify
      display block
      &:after
        content ''
        width 100%
        display inline-block
    .person
      width 139px
      margin 61px 0 0 0
      &:nth-of-type(4n)
        width 139px
      &.empty
        size 0
        absolute false
      &.fill
        display inline-block
    
$start = 720px
$step = 60px
$before = 0px
$after = 0px
for $i in 0..30
  $height = $start + $i * $step
  $before = floor($i / 2) * $step
  if (!($i%2 == 0)) {
    $after += $step
  }  
  +media-query(only screen, min-height $height)
    #team .page-content
      &:before
        height $before
      &:after
        height $after
+media-query(only screen, max-width 780px)
  #team
    .page-content
      &:before
      &:after
        height 0 
    .page-footer
      margin 88px 0 50px 0    
    .persons
      margin-top -40px  
+media-query(only screen, max-width 500px)
  #team
    .page-footer
      margin 42px 0